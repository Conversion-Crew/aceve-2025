      {
        "label": "Accent color",
        "name": "accent_color",
        "id": "accent_color_type",
        "type": "choice",
        "display": "radio",
        "choices": [
          ["solid", "Solid"],
          ["gradient", "Gradient"]
        ],
        "default": "gradient"
      },
      {
        "label": "Solid Accent (Primary color)",
        "name": "accent",
        "alternate_names": ["primary_color"],
        "type": "color",
        "inline_help_text": "This will be your theme's <b>Accent color</b> if you select <b>Solid</b> above, and it's also the <b>Primary color</b> for external modules. By default, it inherits the <b>Primary color</b> from your <b>Branding</b> settings.",
        "inherited_value": {
          "property_value_paths": {
            "color": "brand_settings.primaryColor"
          }
        },
        "default": {
          "color": "#F65954",
          "opacity": 100
        },
        "visibility": {
          "hidden_subfields": {
            "opacity": true
          }
        }
      },
      {
        "label": "Gradient start",
        "name": "gradient_start",
        "type": "color",
        "default": {
          "color": "#F5693F"
        },
        "visibility": {
          "controlling_field": "accent_color_type",
          "controlling_value_regex": "gradient",
          "operator": "EQUAL",
          "hidden_subfields": {
            "opacity": true
          }
        }
      },
      {
        "label": "Gradient end",
        "name": "gradient_end",
        "type": "color",
        "default": {
          "color": "#F53F71"
        },
        "visibility": {
          "controlling_field": "accent_color_type",
          "controlling_value_regex": "gradient",
          "operator": "EQUAL",
          "hidden_subfields": {
            "opacity": true
          }
        }
